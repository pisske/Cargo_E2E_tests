{
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "@testing-library/cypress": "^10.1.0",
    "allure-commandline": "^2.34.1",
    "cypress": "^15.4.0",
    "cypress-plugin-xhr-toggle": "^1.2.1",
    "cypress-xpath": "^2.0.1",
    "dotenv": "^17.2.2",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.0"
  },
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "cypress:run:allure": "cypress run && npm run allure:report && npm run allure:open",
    "mochawesome:merge": "mochawesome-merge cypress/reports/*.json > cypress/reports/report.json",
    "mochawesome:report": "marge cypress/reports/report.json --reportDir cypress/reports"
  }
}
