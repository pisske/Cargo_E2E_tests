{
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "@testing-library/cypress": "^10.1.0",
    "allure-commandline": "^2.34.1",
    "cypress": "^15.4.0",
    "cypress-plugin-xhr-toggle": "^1.2.1",
    "cypress-xpath": "^2.0.1",
    "dotenv": "^17.2.2",
    "rimraf": "^6.1.0"
  },
  "scripts": {
    "clean:allure": "npx rimraf allure-results allure-report",
    "cypress:run": "npx cypress run",
    "allure:report": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report",
    "cypress:run:allure": "npm run clean:allure && npm run cypress:run && npm run allure:report",
    "cypress:run:allure:ci": "npm run clean:allure && npm run cypress:run && npm run allure:report"
  }
}
